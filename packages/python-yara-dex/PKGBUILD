pkgname=python-yara-dex
#_gitpkgname=yara-python
_pkgname=yara-python-dex
pkgver=1.0.3
pkgrel=1
pkgdesc='The Python interface for YARA.'
arch=('any')
url='https://github.com/MobSF/yara-python-dex'
license=('Apache')
makedepends=('python-setuptools' 'glibc' 'python' 'yara')
provides=('python-yara')
conflicts=('python-yara' 'python-yara-rednaga')
options=(!emptydirs)
source=("https://github.com/MobSF/${_pkgname}/archive/refs/tags/${pkgver}.tar.gz")
sha256sums=('5fc09406b00b8df4976fedda213fbc78b76d92c46b3df379f5dcd4b0b46164fd')

build() {
  cd "$_pkgname-${pkgver}"

  python setup.py build
}

package() {
  cd "$_pkgname-${pkgver}"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

